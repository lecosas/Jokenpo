<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.MainActivity" android:background="@drawable/backgroud">
    <Button
            android:text="@string/label_start_game"
            android:layout_width="0dp"
            style="@style/custom_button"
            android:layout_height="wrap_content"
            android:id="@+id/btStartGame" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toTopOf="@+id/btFinishGame"/>
    <Button
            android:text="@string/label_finish_game"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            style="@style/custom_button"
            android:id="@+id/btFinishGame" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/tvAbout" android:layout_marginBottom="100dp"/>
    <ImageView
            android:layout_width="270dp"
            android:layout_height="310dp" app:srcCompat="@drawable/jokenpologo"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/btStartGame" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="@string/label_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvAbout" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="40dp" style="@style/sub_text"/>
</androidx.constraintlayout.widget.ConstraintLayout>